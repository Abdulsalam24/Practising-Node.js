<!DOCTYPE html>
<html lang="en">
  <%- include('./partials/head.ejs') %>

  <body>
    <%- include('./partials/nav.ejs') %>

    <div class="container">
      <section>
        <h1>Welcome to ABD Blog Site</h1>
      </section>
  
      <div class="content">
        <% if(blogs.length > 0) { %> <% blogs.forEach(blog => { %>
        <div>
          <a href="/blogs/<%= blog.id %>">  
            <h3><%= blog.title %></h3>
            <p><%= blog.snippet %></p>
          </a>
        </div>
  
        <% }) %> <% } else {%>
        <p>no item</p>
  
        <% } %>
      </div>
    </div>
    <%- include('./partials/footer.ejs') %>
  </body>
</html>
